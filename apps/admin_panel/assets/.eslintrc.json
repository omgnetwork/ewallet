{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "standard",
    "standard-react",
    "standard-jsx",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-no-bind": 0,
    "no-return-assign": 0,
    "react/jsx-closing-bracket-location": 2,
    "react/no-unused-prop-types": 1,
    "react/sort-comp": 1,
    "quotes": ["error", "single"],
    "space-before-function-paren": ["error", "always"],
    "camelcase": "off",
    "react/no-unescaped-entities": "warn",
    "import/first": [ "error", "absolute-first" ]
  },
  "env": {
    "jquery": true,
    "jest": true
  },
  "globals": {
    "_":  true,
    "BACKEND_API_URL": true,
    "BACKEND_WEBSOCKET_URL": true,
    "CONFIG": true,
    "WebSocket": true
  }
}