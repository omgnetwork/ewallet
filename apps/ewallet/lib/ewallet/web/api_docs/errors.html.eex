<html>
  <head>
    <title>Error Codes for <%= assigns.app_name %></title>
  </head>
  <body>
    <h1>Error Codes for <%= assigns.app_name %></h1>
    <table>
      <thead>
        <tr>
          <th>Code</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
      <%= for {_key, error} <- assigns.errors do %>
        <tr>
          <td><%= error.code %></td>
          <%= if error[:description] do %>
            <td><%= error.description %></td>
          <% end %>
          <%= if error[:template] do %>
            <td><%= error.template %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
  </body>
</html>
