{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "import"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "camelcase": "off",
    "import/first": [ "error", "absolute-first" ],
    "no-return-assign": 0,
    "quotes": ["error", "single"],
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-no-bind": 0,
    "react/no-did-update-set-state": 0,
    "react/no-unescaped-entities": "warn",
    "react/no-unused-prop-types": 1,
    "react/sort-comp": 1,
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", "always"],
    "no-unused-vars": "off"/* Temporary. Needs to be cleaned up. */
  },
  "env": {
    "jquery": true,
    "jest": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "BACKEND_API_URL": true,
    "BACKEND_WEBSOCKET_URL": true
  }
}